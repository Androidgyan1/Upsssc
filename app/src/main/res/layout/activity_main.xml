<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gov.upsssc.MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/logo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">



            <ImageView
                android:src="@drawable/paraknewlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>

        </RelativeLayout>

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:background="#7FB3D5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

<LinearLayout
    android:id="@+id/linearqrscandetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/show_longitute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:textSize="12sp" />



    <TextView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/show_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="latitude"
        android:textSize="12sp" />


    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/mobile_no_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/datafromcodescreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:text="mac address"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/MAC_Ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:text="ip address"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/ip_main_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <EditText
        android:visibility="gone"
        android:editable="false"
        android:layout_marginTop="10dp"
        android:id="@+id/scantext"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:textColor="#000"
        android:textSize="14sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/backgroundcolor">


        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canditate Name-"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:lines="2"
                android:id="@+id/canditate_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="------"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner1"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father/Hus Name-"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/canditate_father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="------"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/liner_father_naem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner2"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dob-"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/canditate_Dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-------"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>



        </LinearLayout>



        <LinearLayout
            android:id="@+id/linernativeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner_father_naem"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Native of up -"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/canditade_native_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-----"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linercategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linernativeup"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category/Sub-Cat -"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/canditade_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-------"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linergender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linercategory"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender -"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/canditade_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="------"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>


        <ImageView
            android:layout_below="@+id/liner2"
            android:id="@+id/canditate_Photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="6dp"
            android:scaleType="fitXY"></ImageView>

        <ImageView
            android:id="@+id/canditate_Sign"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/canditate_Photo"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="6dp"
            android:scaleType="fitXY"></ImageView>


    </RelativeLayout>

