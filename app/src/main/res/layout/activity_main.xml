                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-----"
                android:textColor="@android:color/black"
                android:textSize="12sp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner6"
            android:layout_below="@id/liner5"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Centre Code Name-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_marginBottom="4dp"
                android:padding="3dp"
                android:background="@drawable/textborder"
                android:id="@+id/canditate_Centre_Code"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:text="-----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/canditate_Centre_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-----"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner7"
            android:layout_below="@id/liner6"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Centre Address-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:id="@+id/canditate_Centre_Address"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:text="--------"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>





    </RelativeLayout>

    <TextView
        android:textColor="@android:color/white"
        android:background="#515A5A"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="Examination Details"
        android:layout_width="match_parent"
        android:layout_height="40dp"></TextView>


    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/backgroundcolor"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/liner9"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Examination Date- "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textStyle="bold"
                android:id="@+id/canditate_Exam_Date"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:text="-------"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner10"
            android:layout_below="@id/liner9"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Examination Timing----> "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textStyle="bold"
                android:id="@+id/canditate_Exam_Time"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:text="----------"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>






    </RelativeLayout>



    <Button
        android:elevation="10dp"
        android:layout_marginBottom="6dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:background="@drawable/checkbyrollnobackground"
        android:textAllCaps="false"
