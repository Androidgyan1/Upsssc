<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuickCheck">

    <ImageView
        android:src="@drawable/paraknewlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ImageView>






    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/canditate_Photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        android:scaleType="fitXY"></ImageView>

    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/quickrollphoto"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="roll no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:text="device_name"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/device_name_quick_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:text="mobile_no"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:id="@+id/mobile_no_quick_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/show_longitute_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:textSize="12sp" />



    <TextView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/show_latitude_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="latitude"
        android:textSize="12sp" />

    <TextView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/quick_mac_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="latitude"
        android:textSize="12sp" />


    <TextView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/ip_address_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ipaddress"
        android:textSize="12sp" />





    <EditText
        android:visibility="gone"
        android:id="@+id/result_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:editable="false" />


    <ImageView
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:id="@+id/canditate_camra_photo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        android:scaleType="fitXY"></ImageView>



    <Button
        android:layout_marginBottom="5dp"
        android:onClick="validate"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:background="@drawable/checkbyrollnobackground"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Click Candidate Photo"
        android:layout_marginTop="25dp"/>




</LinearLayout>