<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Invegilater_Activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/logo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:src="@drawable/paraknewlogo"
                android:layout_width="match_parent"
                android:layout_height="75dp"></ImageView>

        </RelativeLayout>
        <View
            android:background="#7FB3D5"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


        <TextView
            android:layout_marginTop="14dp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Authorized Invigilator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_gravity="center"
            android:background="#7FB3D5"
            android:layout_width="200dp"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:text="Name-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:fontFamily="serif"
                android:id="@+id/Inname"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:text="mayank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="14sp"
                android:text="Reg. Mobile No.-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:fontFamily="serif"
                android:id="@+id/mobilenoinvigelter"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:text="-----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:text="All. Cent.Code,Name-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:fontFamily="serif"
                android:padding="4dp"
                android:background="@drawable/textborder"
                android:id="@+id/centercode"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:text="----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:id="@+id/centername"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:text="------"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="From -"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:fontFamily="serif"
                    android:id="@+id/datefrom"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="4dp"
                    android:textSize="14sp"
                    android:text="-----"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="Upto- "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:fontFamily="serif"
                    android:id="@+id/upto"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:text="------"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:background="#7FB3D5"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

<RelativeLayout
    android:layout_marginTop="12dp"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <Button
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:id="@+id/quick_check"
            android:onClick="QickResult"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/broder"
            android:text="Quick Check"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />


    <Button
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:id="@+id/detail_canditate"
        android:onClick="DetailResult"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Check Detail"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />



</RelativeLayout>


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:id="@+id/munally_check"
                android:onClick="munallycheck"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbyrollnobackground"
                android:text="Check by Roll.No"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />


            <Button
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:id="@+id/closeapp"
                android:onClick="Cloaseapp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/closebackground"
                android:text="Close App"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />



        </RelativeLayout>





    </LinearLayout>


    <View
        android:layout_above="@+id/invigiloter_logo"
        android:background="#E19010"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <ImageView
        android:id="@+id/invigiloter_logo"
        android:background="@android:color/holo_blue_dark"
        android:scaleType="fitXY"
        android:src="@drawable/nicnewlogo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"></ImageView>


</RelativeLayout>